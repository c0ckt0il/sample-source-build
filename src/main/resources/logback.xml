<configuration>
    <appender name="OTLP" class="io.opentelemetry.instrumentation.logback.appender.v1_0.OtlpLogbackAppender">
        <!-- OTLP Exporter 기본 설정 -->
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="OTLP"/>
    </root>
</configuration>
